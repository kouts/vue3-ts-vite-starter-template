{
  "name": "vue3-ts-vite-starter-template",
  "description": "Vue.js 3 TypeScript / Vite starter template with Pinia, Vue Router, Tailwind and more.",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/vue3-ts-vite-starter-template",
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-preview": "vite build && vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "vitest",
    "test:unit-coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "quality": "pnpm run lint && pnpm run typecheck && vitest run && pnpm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@fullhuman/vue-cli-plugin-purgecss": "^7.0.2",
    "@kouts/eslint-config": "^3.0.9",
    "@tailwindcss/vite": "^4.1.16",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.6",
    "@vue/compiler-sfc": "^3.5.22",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.93.3",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "vue-tsc": "^3.1.2"
  }
}